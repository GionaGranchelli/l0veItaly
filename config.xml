<?xml version='1.0' encoding='utf-8'?>
<widget id="org.squadra.genew.loveitaly" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LoveItaly</name>
    <description>
	LoveItaly.net Ecommerce Client
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Genew Porchetta Team Club 
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
   <preference name="orientation" value="portrait" />
   <preference name="StatusBarBackgroundColor" value="#eaeaea" />
   <preference name="StatusBarStyle" value="blacktranslucent" />
   <icon src="www/img/LOGO_DE200xF.png" />
	<platform name="android">
	    <!-- you can use any density that exists in the Android project -->
	    <splash src="www/img/LOGO_DEF.png" density="land-hdpi"/>
	    <splash src="www/img/LOGO_DEF.png" density="land-ldpi"/>
	    <splash src="www/img/LOGO_DEF.png" density="land-mdpi"/>
	    <splash src="www/img/LOGO_DEF.png" density="land-xhdpi"/>
	    <splash src="www/img/LOGO_DEF.png" density="port-hdpi"/>
	    <splash src="www/img/LOGO_DEF.png"density="port-ldpi"/>
	    <splash src="www/img/LOGO_DEF.png" density="port-mdpi"/>
	    <splash src="www/img/LOGO_DEF.png" density="port-xhdpi"/>
	</platform>
<preference name="StatusBarOverlaysWebView" value="false" />
</widget>
